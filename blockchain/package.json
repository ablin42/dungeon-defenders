{
  "name": "dungeon-defenders-contracts",
  "version": "0.1.16",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": true,
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "module": "npm run module:build && npm run module:updateDependents",
    "module:build": "npx tsc",
    "module:updateDependents": "cd ../frontend && npm update dungeon-defenders-contracts && cd ../server && npm update dungeon-defenders-contracts",
    "deploy": "npx hardhat run ./scripts/deploy.ts --network goerli",
    "verify": "npx hardhat run ./scripts/verify.ts --network goerli",
    "deployAndVerify": "npm run deply && npm run verify",
    "deployVerifyModule": "npm run deploy && npm run verify && npm run module",
    "transferGems": "ts-node --files ./scripts/transferGems.ts",
    "deploy:loot": "ts-node --files ./scripts/Loot/deploy.ts",
    "createLoot": "ts-node --files ./scripts/Loot/createLoot.ts",
    "getLoot": "ts-node --files ./scripts/Loot/getLoot.ts",
    "deploy:dds": "ts-node --files ./scripts/DungeonDefenders/deploy.ts",
    "createDefender": "ts-node --files ./scripts/DungeonDefenders/createDefender.ts",
    "getDefender": "ts-node --files ./scripts/DungeonDefenders/getDefender.ts",
    "gainExperience": "ts-node --files ./scripts/DungeonDefenders/gainExperience.ts",
    "getTokenUri": "ts-node --files ./scripts/DungeonDefenders/getTokenUri.ts"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.6",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@typechain/ethers-v5": "^7.2.0",
    "@typechain/hardhat": "^2.3.1",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^12.20.55",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "chai": "^4.3.6",
    "dotenv": "^16.0.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.2.0",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.6.9",
    "hardhat": "^2.9.9",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.21",
    "ts-node": "^10.8.1",
    "typechain": "^5.2.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.6.0"
  }
}